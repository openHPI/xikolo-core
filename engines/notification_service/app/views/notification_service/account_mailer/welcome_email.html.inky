<row>
  <columns>
    <p><%= t('notification_service.notifications.account_mailer.welcome_email.welcome', site_name: Xikolo.config.site_name) %></p>
    <% if @url.present? %>
      <p><%= t('notification_service.notifications.account_mailer.welcome_email.confirmation') %></p>
      <center><button class="primary" href="<%= @url %>"><%= t('notification_service.notifications.account_mailer.welcome_email.link') %></button></center>
    <% end %>
    <p>
      <%= t('notification_service.notifications.account_mailer.welcome_email.next_steps') %>
      <ul>
        <% unless @mandatory_fields %>
          <li><%= t('notification_service.notifications.account_mailer.welcome_email.step_1') %></li>
        <% end %>
        <li><%= t('notification_service.notifications.account_mailer.welcome_email.step_2') %></li>
        <li><%= t('notification_service.notifications.account_mailer.welcome_email.step_3') %></li>
        <li><%= t('notification_service.notifications.account_mailer.welcome_email.step_4') %></li>
      </ul>
    </p>
  </columns>
</row>
