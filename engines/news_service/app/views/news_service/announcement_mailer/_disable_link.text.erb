<% if @payload.disable_link_global || @payload.disable_link_local %>
  <%= t '.explanation.text',
       site_name: Xikolo.config.site_name,
       email: @payload.email %>
  <%= t '.local.text',
       link: @payload.disable_link_local if @payload.disable_link_local %>
  <%= t '.global.text',
        link: @payload.disable_link_global if @payload.disable_link_global %>
<%- else %>
  <%= t '.notification_settings_link.text',
        link: Xikolo.base_url.join('preferences').to_s %>
<%- end %>
