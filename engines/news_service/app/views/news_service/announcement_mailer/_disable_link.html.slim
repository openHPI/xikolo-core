row.settings
  columns
    hr.bs-hr
    - if @payload.disable_link_global || @payload.disable_link_local
      p
        = t '.explanation.html',
          site_name: Xikolo.config.site_name,
          email: @payload.email
      p
        - if @payload.disable_link_local
          span#local
            = t '.local.html', link: @payload.disable_link_local
        - if @payload.disable_link_global
          span#global
            = t '.global.html', link: @payload.disable_link_global
    - else
      p
        = t '.notification_settings_link.html',
          link: Xikolo.base_url.join('preferences').to_s
