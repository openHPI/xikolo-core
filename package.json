  "scripts": {
    "build:tailwind": "bunx @tailwindcss/cli -i ./app/assets/stylesheets/tailwind/input.css -o ./app/assets/builds/tailwind.css --minify",
    "build": "bun bun.config.js",
    "format": "prettier --write .",
    "tsc:check": "tsc --noEmit --skipLibCheck",
    "lint:css": "stylelint --allow-empty-input 'app/assets/**/*.{css,scss}' 'brand/*/assets/**/*.{css,scss}'",
    "lint:format": "prettier --check .",
    "lint:herb": "herb-lint '**/*.html.erb'",
    "lint:js": "eslint app/javascript",
    "lint:md": "markdownlint '**/*.{md,md.erb}' .",
    "postinstall": "husky",
    "herb:format": "herb-format",
    "herb:format:check": "herb-format --check",
    "build:css": "bun run build:tailwind && ./bin/build_sass",
    "watch:sass": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"./bin/build_sass\""
  },
  "lint-staged": {
    "*": [
      "prettier --ignore-unknown --write",
      "editorconfig-checker"
    ],
    "*.rb": "bundle exec rubocop --force-exclusion --autocorrect",
    "*.html.erb": "bun lint:herb",
    "*.slim": "bundle exec slim-lint",
    "*.{js,ts,jsx,tsx,mjs}": "eslint --fix",
    "*.{css,scss,sass}": "stylelint --fix --allow-empty-input",
    "*.{md,md.erb}": "markdownlint --fix"
  },
  "packageManager": "bun@1.3.6"
}
