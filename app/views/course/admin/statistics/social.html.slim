- content_for :head_assets
  = javascript_include_tag 'course-admin'
  = javascript_include_tag 'teacher', crossorigin: 'anonymous', integrity: true, async: true, debug: false

- content_for :course_area_header
  = render Global::PageHeader.new("#{t(:'admin.statistics.social.title')} - #{course_layout.title}",
    subtitle: t(:'course.admin.page_header'),
    type: :slim) do |c|
      - c.with_pill(t(:"items.show.coursestate.#{course_layout.fullstate}"), size: :small, color: :note)
      = render(partial: 'course/shared/course_admin_action', locals: {course: course_layout, in_teacher_context: true})

.container.white-bg.statistics-page[
  data-lanalytics-visit='course_statistics'
  data-lanalytics-resource={type: 'course', uuid: @course['id']}.to_json
  data-lanalytics-context={component: 'social'}.to_json
]
  .row
    .col-md-6
      h3 = t(:'admin.statistics.social.course_shares.7days.title')
      = render partial: 'shared/statistics_table', locals: {id: 'course-shares-7days-table', attr: {'data-course-id': @course['id']}}

    .col-md-6
      h3 = t(:'admin.statistics.social.course_shares.30days.title')
      = render partial: 'shared/statistics_table', locals: {id: 'course-shares-30days-table', attr: {'data-course-id': @course['id']}}

    .col-md-6
      h3 = t(:'admin.statistics.social.course_shares.total.title')
      = render partial: 'shared/statistics_table', locals: {id: 'course-shares-total-table', attr: {'data-course-id': @course['id']}}
