#!/usr/bin/env ruby
require "fileutils"

APP_ROOT = File.expand_path("..", __dir__)

def system!(*args)
  system(*args, exception: true)
end

FileUtils.chdir APP_ROOT do
  puts "== Installing dependencies =="
  system! "gem install bundler --conservative"
  system("bundle check") || system!("bundle install")

  puts "\n== Clearing Sidekiq queues =="
  system! "bin/rails sidekiq:clear"

  puts "\n== Clearing RabbitMQ queues =="
  system! "bin/rails msgr:drain"

  puts "\n== Clearing S3 buckets =="
  system! "bin/rails local_s3:delete"

  puts "\n== Preparing S3 =="
  system! "bin/rails local_s3:configure"

  puts "\n== Preparing DB =="
  system! "bin/rails db:reset"

  puts "\n== Preparing test DB data =="
  system! "RAILS_ENV=test bin/rails db:seed"

  puts "\n== Removing old logs and tempfiles =="
  system! "bin/rails log:clear tmp:clear"
end
